<div v-view-setup="PSavToTimCtrl" v-init="init()">
	<!-- 存款利率 -->
	<div v-page v-transition="native" title="存贷利率">
		<form>
			<div class="box_cont">
				<div class="zz_cont"
					style="margin-left: 0px; margin-right: 0px; padding: 0px; width: 100%;">
					<b class="bookTitle"
						style="margin-left: 10px; width: 100%; text-align: center;">
						<li class="inner" id="inner" class="selectTitle"
						style="text-align: center; font-size: 16px; width: 45%;"
						v-click="changeType('1')">存款利率</li>
						<li
						style="border-right: none; font-size: 16px; width: 45%; text-align: center;"
						class="cross" id="cross" v-click="changeType('2')">贷款利率</li>

						<div class="d1"
							style="height: 10px; width: 100%; background: white; float: left;">
							<div class="d3"
								style="height: 2px; width: 7%; background: white; float: left"></div>
							<div class="d2"
								style="height: 2px; width: 28%; background: #0084ff; float: left"></div>
						</div>
					</b>
				</div>
			</div>
			<div v-show="ShowOrHide">
				<div class="bg_box">
					<div class="box_cont">
						<div class="zz_cont">
							<div style="width: 100%;">

								<ul>
									<li>
										<div
											style="text-align: center; line-height: 38px; font-weight: bold;">自2015年10月25日起执行</div>
									</li>
								</ul>
								<ul>
									<li>
										<div
											style="float: left; padding-left: 10px; width: 40%; line-height: 38px;">项目</div>
										<div
											style="text-align: center; float: left; width: 24%; line-height: 38px;">现行利率</div>
										<div
											style="text-align: center; float: right; width: 24%; line-height: 38px;">我行利率</div>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
				<div class="bg_box" v-repeat="type in SavtypeList">
					<div class="box_cont">
						<div class="zz_cont">
							<ul>
								<li>
									<div
										style="float: left; padding-left: 10px; width: 70%; line-height: 38px; font-weight: bold;">{{type.Name}}</div>
								</li>
							</ul>
							<div v-show="type.Code == item.Code" v-repeat="item in SavRateList">
								<div style="width: 100%;">
									<ul>
										<li>
											<div v-show="!item.Name"
												style="float: left; padding-left: 10px; width: 40%; line-height: 38px;">{{item.Date}}</div>
											<div v-show="!item.Name"
												style="text-align: center; float: left; padding-right: 10px; width: 24%; line-height: 38px;">{{item.Rate}}</div>
											<div v-show="!item.Name"
												style="text-align: center; float: right; padding-right: 10px; width: 24%; line-height: 38px;">{{item.PRate}}</div>
											<div v-show="item.Name"
												style="float: left; padding-left: 10px; width: 90%; line-height: 38px;">{{item.Name}}</div>
										</li>
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div v-show="!ShowOrHide">
				<div class="bg_box">
					<div class="box_cont">
						<div class="zz_cont">
							<div style="width: 100%;">
								<ul>
									<li>
										<div
											style="text-align: center; line-height: 38px; font-weight: bold;">自2015年10月24日起执行</div>
									</li>
								</ul>
								<ul>
									<li>
										<div
											style="float: left; padding-left: 10px; width: 40%; line-height: 38px;">项目</div>
										<div
											style="text-align: center; float: left; width: 24%; line-height: 38px;">调整前</div>
										<div
											style="text-align: center; float: right; width: 24%; line-height: 38px;">现行</div>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
				<div class="bg_box" v-repeat="type in LoantypeList">
					<div class="box_cont">
						<div class="zz_cont">
							<ul>
								<li>
									<div
										style="float: left; padding-left: 10px; width: 70%; line-height: 38px; font-weight: bold;">{{type.Name}}</div>

								</li>
							</ul>
							<div v-show="type.Code == item.Code" v-repeat="item in LoanRateList">
								<div style="width: 100%;">
									<ul>
										<li>
											<div v-show="!item.Name"
												style="float: left; padding-left: 10px; width: 40%; line-height: 38px;">{{item.Date}}</div>
											<div v-show="!item.Name"
												style="text-align: center; float: left; padding-right: 10px; width: 24%; line-height: 38px;">{{item.OldRate}}</div>
											<div v-show="!item.Name"
												style="text-align: center; float: right; padding-right: 10px; width: 24%; line-height: 38px;">{{item.Rate}}</div>
											<div v-show="item.Name"
												style="float: left; padding-left: 10px; width: 90%; line-height: 38px;">{{item.Name}}</div>
										</li>
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
	<div style="width: 100%; height: 40px;"></div>
</div>
<script>
	PSavToTimCtrl.$inject = [ "$scope", "$remote", "$targets", "$filter",
			"$context" ];
	function PSavToTimCtrl($scope, $remote, $targets, $filter, $context) {
		$scope.init = function() {
			$scope.changeType("1");
			$scope.SavtypeList = [ {
				"Name" : "活期存款",
				"Code" : "1"
			}, {
				"Name" : "整存整取",
				"Code" : "2"
			}, {
				"Name" : "零存整取、零存零取、存本取息",
				"Code" : "3"
			}, {
				"Name" : "定活两便",
				"Code" : "4"
			}, {
				"Name" : "通知存款",
				"Code" : "6"

			} ];
			$scope.SavRateList = [ {
				"Code" : "1",
				"Date" : "活期",
				"PRate" : "0.35%",
				"Rate" : "0.35%"
			}, {
				"Code" : "2",
				"Date" : "三个月",
				"PRate" : "1.44%",
				"Rate" : "1.10%"
			}, {
				"Code" : "2",
				"Date" : "半年",
				"PRate" : "1.69%",
				"Rate" : "1.30%"
			}, {
				"Code" : "2",
				"Date" : "一年",
				"PRate" : "1.95%",
				"Rate" : "1.50%"
			}, {
				"Code" : "2",
				"Date" : "二年",
				"PRate" : "2.73%",
				"Rate" : "2.10%"
			}, {
				"Code" : "2",
				"Date" : "三年",
				"PRate" : "3.57%",
				"Rate" : "2.75%"
			}, {
				"Code" : "2",
				"Date" : "五年",
				"PRate" : "3.60%",
				"Rate" : "--"
			}, {
				"Code" : "3",
				"Date" : "一年",
				"PRate" : "1.44%",
				"Rate" : "1.10%"
			}, {
				"Code" : "3",
				"Date" : "三年",
				"PRate" : "1.69%",
				"Rate" : "1.30%"
			}, {
				"Code" : "3",
				"Date" : "五年",
				"PRate" : "1.95%",
				"Rate" : "--"
			}, {
				"Code" : "4",
				"Name" : "按一年以内定期整存整取同档次利率六折执行"
			}, {
				"Code" : "6",
				"Date" : "一天",
				"PRate" : "0.80%",
				"Rate" : "0.80%"
			}, {
				"Code" : "6",
				"Date" : "七天",
				"PRate" : "1.35%",
				"Rate" : "1.35%"
			}, ];
			$scope.LoantypeList = [ {
				"Name" : "短期贷款",
				"Code" : "1"
			}, {
				"Name" : "中长期贷款",
				"Code" : "2"
			}, {
				"Name" : "个人住房公积金贷款",
				"Code" : "3"
			} ];
			$scope.LoanRateList = [ {
				"Code" : "1",
				"Date" : "一年(含)以内",
				"OldRate" : "4.6%",
				"Rate" : "4.35%"
			}, {
				"Code" : "2",
				"Date" : "一年至五年(含)",
				"OldRate" : "5.00%",
				"Rate" : "4.75%"
			}, {
				"Code" : "2",
				"Date" : "五年以上",
				"OldRate" : "5.15%",
				"Rate" : "4.90%"
			}, {
				"Code" : "3",
				"Date" : "五年以下(含)",
				"OldRate" : "2.75%",
				"Rate" : "2.75%"
			}, {
				"Code" : "3",
				"Date" : "五年以上",
				"OldRate" : "3.25%",
				"Rate" : "3.25%"
			} ];
		}
		$scope.changeType = function(data) {
			$scope.changeCDType = data;
			if (data == '1') {
				$scope.ShowOrHide = true; 
				$('.inner').css('color', '#0084ff');
				$('.cross').css('color', 'black');
				$('.d3').css('width', '8%');
			} else {
				$scope.ShowOrHide = false; 
				$('.cross').css('color', '#0084ff');
				$('.inner').css('color', 'black');
				$('.d3').css('width', '54%');
			}
		}
	}
</script>