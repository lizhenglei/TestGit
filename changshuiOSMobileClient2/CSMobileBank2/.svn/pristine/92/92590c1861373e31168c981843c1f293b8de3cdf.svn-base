<div v-view-setup="PTimToSavCtrl" v-init="init()">
	<!-- 定期转活期录入页面 -->
	<div v-page v-transition="native" title="定期转活期">
		<form  name="transInput" >
			<div class="bg_box" >
				<div class="selected">
					<span><img class="jindu" src="images/u1.png" /></span> <span><img
						class="jindu" src="images/u2_1.png" /></span> <span><img class="jindu" src="images/u3_1.png" /></span>
				</div>
	 
				<div class="zz_cont" >
					<ul style="width:100%">
						<li style="background:#fff;margin-bottom:10px;">
							<em>付款账号：</em>
							<i>
								<select  v-change="getfixList()" v-model="payCard" name="payCard" v-options="ac.AcNo1 for ac in acList" >
								</select>
							</i>
						</li>
					</ul>
				</div>
			</div>
			<div class="bg_box"  v-more-page="fixInfo in fixInfoList" v-click="toConfirm(fixInfo)"  >
				  <div v-show="fixInfo.type!=1" class="xiangq_img1" style="margin-top:18%;"><a href=""><img src="images/more.png" /></a></div>
				  <div v-show="fixInfo.type==1" style="position:absolute; right:10px; cursor:pointer;margin-top:25%;"><img src="images/happytim.png" /></div>
				  <div class="zz_cont">
				     <ul style="width:80%;align:center;">
							<li><em style="width:35%;">起存日期：</em><i style="width:45%;">{{fixInfo.BeginDate}}</i></li>
				            <li><em style="width:35%;">到期日期：</em><i style="width:45%;">{{fixInfo.EndDate}}</i></li>
				            <li><em style="width:35%;">本金：</em><i style="width:45%;color:#ff6000" >{{fixInfo.Balance|number:2}}元</i></li>
							<li><em style="width:35%;">存期：</em><i style="width:45%;">{{fixInfo.Term}}期</i></li>
							<li><em style="width:35%;">年利率：</em><i style="width:45%;">{{fixInfo.Rate}}%</i></li>
					  </ul>
			       </div>
			</div>
			<div >
			     <input type="submit" id="nextButton"  class="button_1" name="Submit" value="查看更多" v-click="PAGE.moreNextPage()">
			</div>
			<div  style="font-size:15px;text-align:center;padding-top:20px;" v-hide="fixInfoList.length!=0"><img src="images/caimi.png" style="width:60px;padding-right:10px;">很抱歉，未查询到定期，存一笔吧</div>
		</form>
		<div style="width:100%;height:40px;"></div>
	</div>
	
	<!-- 定期转活期确认页面 -->
	<div v-page v-transition="native" title="定期转活期">
		 <form name="transConfirm" class="bg_box">
		    <div class="box_cont">
		      <div class="selected">
		        <span><img class="jindu" src="images/u1.png" /></span>
		         <span><img class="jindu" src="images/u2.png" /></span>
		          <span><img class="jindu" src="images/u3_1.png" /></span>
		      </div>
		      <div class="zz_cont">
			      <ul>
						<li><em>账号：</em><i>{{payCard.AcNo1}}</i></li>
						<li><em>起存日期：</em><i>{{selectedFix.BeginDate}}</i></li>
			            <li><em>到期日期：</em><i>{{selectedFix.EndDate}}</i></li>
						<li><em>存期：</em><i>{{selectedFix.Term}}期</i></li>
						<li><em>本金：</em><i style="color:#ff6000">{{selectedFix.Balance|number:2}}元</i></li>
				  </ul>
		       </div>
		       
		       <div class="zz_cont">
			      <ul>
						<li>
							<em>验证码：</em>
							<i><input type="tel" name="imgcode" v-model="imgcode" class="y_srk" maxlength=4 placeholder="请输入验证码" style="width:50%"/></i>
							<img id="img" name="img" v-model="img" src="data:image/png;base64,{{TokenImg}}" data-ke-src="data:image/png;base64,{{TokenImg}}"  style="position:relative;left:40%;margin-top:3%" v-click="freshCode()">
<!-- 							<img id="img" name="img" v-model="img" src="/pmobile/GenTokenImg.do"  style="position:relative;left:40%;margin-top: 2%" v-click="freshCode('img')"> -->
							
						</li>
				  </ul>
		     	</div>
		     	<div>
		     		<input type="submit"  class="button_1" name="Submit" value="确认"  v-disabled="!imgcode"  v-click="toResult()">
		     	</div>
		 </div>
		 </form>
	</div>
	
	
	<!-- 定期转活期结果页面 -->
	<div  v-page v-transition="native" data-back="false" title="定期转活期">
		<div class="bg_box">
		    <div class="box_cont">
			      <div class="selected">
			        <span><img class="jindu" src="images/u1.png" /></span>
			        <span><img class="jindu" src="images/u2.png" /></span>
			        <span><img class="jindu" src="images/u3.png" /></span>
			      </div>
				  <div class="zz_cont">
				     <div v-show="IsReward=='true'" class="maind" style="margin:0px">
						<div class="d1" style="float:left;padding-left:5px;width:20%;padding-top:20px"><img src="images/cg_img.png" style="width:60px;height:60px"/></div>
						<div class="d2" style="float:left;width:50%;height:70px;  padding-top:9%;">
							 <div style="  text-align: center;font-size:x-large;color:#0069c9"> 交易成功</div>
							<div class="transtime" style="padding-bottom:0px;padding-top:10px;font-size:inherit;">{{ii}}</div>
						</div>
						<div class="d3"  style="padding-top: 25px;float:left;width:20%;margin-left:-3%"><img  v-click="gotoRewardPage()" src="images/img_reward.gif" style="width:100px;height:60px;"/></div>
					</div>
					<div v-hide="IsReward=='true'">
						<div class="d1" style="float:left;padding-left:50px;;width:20%;padding-top:20px"><img src="images/cg_img.png" style="width:60px;height:60px"/></div>
						<div class="d2" style="float:right;width:50%;height:70px;  padding-top:9%;padding-right:30px">
							 <div style="  text-align: center;font-size:x-large;color:#0069c9"> 交易成功</div>
							<div class="transtime" style="padding-bottom:0px;padding-top:10px;font-size:inherit;">{{ii}}</div>
						</div>
					</div>
				     <div class="resultForm">
						<ul>
							<li><em>账号：</em><i>{{payCard.AcNo2}}</i></li>
							<li><em>本金：</em><i>{{selectedFix.Balance|number:2}}元</i></li>
				  		</ul>
				     </div>
				  </div>
		 	</div>
 		</div>
	</div>
	<div style="width:100%;height:40px;"></div>
</div>
<script>
PTimToSavCtrl.$inject = ["$scope","$remote","$targets","$filter","$context"];
function PTimToSavCtrl($scope,$remote,$targets,$filter,$context){
	$scope.init=function(){
		$remote.post("/pmobile/ActListQry.do",{},function(data){
			//从借记卡和存折的列表中筛选出借记卡
			var temp=[];
			vx.forEach(data.AcList,function(item){
				if(item.AcType=="1"){
					temp.push(item);
				}
			});
			$scope.acList=temp;
			var filterFn=$filter("filter");
			$scope.acList=filterFn($scope.acList,function(obj,text){
				if(obj.AcNo != undefined){
					obj.AcNo1=obj.AcNo.substring(0,4)+"****"+ obj.AcNo.substring(obj.AcNo.length-4)
					obj.AcNo2=obj.AcNo1;
					return true;
				}
			});
			$scope.mobileNo=data.MobilePhone;
			$scope.payCard=$scope.acList[0];
			$scope.getfixList();
		});
	}
	//获取定期列表
	$scope.getfixList=function(){
		var params={
				"AcNo":$scope.payCard.AcNo,
				"Flag":2,//1---活期   2---无活期
				"pageSize":10,
				"currentIndex":1
		}
		$remote.post("/pmobile/SubActsQry.do",params,function(data){
			if(data._RejCode=="000000"){
				$scope.fixInfoList=data.List;
				$scope.totalnumber = data.recordNumber;
				console.log($scope.fixInfoList);
			}
		},function(data){ 
			if(data.jsonError){
				$scope.fixInfoList="";
			}
			return data.jsonError;
		});
	}
	$scope.morepage = function(qishi,zhongzhi,zengliang,list){
		$scope.start=1;//不是第一次进入
		var params = {
				"AcNo":$scope.payCard.AcNo,
				"Flag":2,//1---活期   2---无活期
				"pageSize":10,
				"currentIndex":qishi/10+1
		};
		$remote.post("/pmobile/SubActsQry.do", params, function(data) {
			$scope.fixInfoList=data.List;
		
		});
	};
	//跳转到抽奖页面
	$scope.gotoRewardPage=function(){
		$context.clear();
		$scope.TransName="定期转活期";
		$remote.post("/pmobile/TransRewardsQry.do",{"TRANSNAME":$scope.TransName},function(data){
			if(data.GAMETYPE=="0"){
				var param={
						"ReWardCount":data.REWARDCOUNT,"TransName":data.TRANSNAME,
						"Count":data.COUNT,
						"GameType":data.GAMETYPE,
						"IsReward":data.ISREWARD,
						
						"UpDateTime":data.UPDATETIME
				}
				$context.setJson({"innerParam":param});
				$scope.goto("LotteryDraw");
			}else if(data.GAMETYPE=="2"){
				var param={
						"ReWardCount":data.REWARDCOUNT,"TransName":data.TRANSNAME,
						"Count":data.COUNT,
						"GameType":data.GAMETYPE,
						"IsReward":data.ISREWARD,
						
						"UpDateTime":data.UPDATETIME
				}
				$context.setJson({"innerParam":param});
				$scope.goto("GuaGuaLe");
			}else if(data.GAMETYPE=="3"){
				var param={
						"ReWardCount":data.REWARDCOUNT,"TransName":data.TRANSNAME,
						"Count":data.COUNT,
						"GameType":data.GAMETYPE,
						"IsReward":data.ISREWARD,
						
						"UpDateTime":data.UPDATETIME
				}
				$context.setJson({"innerParam":param});
				$scope.goto("YaoYiYao");
			}
		});
	}
	//跳转到确认页面
	$scope.toConfirm=function(obj){
		$scope.imgcode="";
		$scope.selectedFix=obj;
		if($scope.selectedFix.type==1){
			NativeCall.toast("定存乐翻天不可进行定转活交易");
			return false;
		}else if($scope.selectedFix.BeginDate.replace("-","").replace("-","")==$scope.getDate(new Date(),0)){
			NativeCall.toast("进行过活转定的账户，当天不能进行定转活交易");
			return false;
		}else if($scope.selectedFix.type==0){
			$scope.params={
					"PayerAcNo":$scope.payCard.AcNo,
					"Amount":$scope.selectedFix.Balance,
					"SubSeq":$scope.selectedFix.SubSeq,
					"Type":0//0-普通；1-定存乐翻天
			}
			$remote.post("/pmobile/TimToSavConfirm.do",$scope.params,function(data){
				if(data._RejCode=="000000"){
					$targets("content","#2");
					$scope.freshCode();
				}
			});
		}
	}
	//刷新验证码
	$scope.freshCode=function(){
		$remote.post("/pmobile/GenTokenImg.do?r"+Math.random(),{},function(data){
			$scope.TokenImg=data.imgKey;
		});
	}
	//跳转到结果页面
	$scope.toResult=function(){
		$scope.confirm("未到期定期款项，利息将以活期利率计算，是否继续？",function(){
			$remote.post("/pmobile/TransRewardsQry.do",{"TRANSNAME":"定期转活期"},function(data){
				$scope.IsReward=data.ISREWARD;
			});	
			$scope.params._vTokenName=$scope.imgcode;
			$remote.post("/pmobile/TimToSav.do",$scope.params,function(data){
					$scope.resultData=data;
					$targets("content","#3");
					NativeCall.history = [];//清空历史，点击左上角返回时，可直接返回原生菜单
					NativeCall.pages=[];
					$remote.post("/pmobile/GenTimeStamp.do",{},function(data){
						if(data._RejCode=="000000"){
							$scope.i=data._sysDate;
							var y=$scope.i.substr(0,4);
							var m=$scope.i.substr(4,2);
							var date=y+"-"+m+"-"+$scope.i.substr(6,2);
							var y=$scope.i.substr(8,2);
							var m=$scope.i.substr(10,2);
							var time=y+":"+m+":"+$scope.i.substr(12,2);
							$scope.ii=date+" "+time;
						}
					},function(data){ 
						if(data.jsonError){
						return data.jsonError;
						}
					});
			},function(data){
				if(data.jsonError){
					$scope.alert(data.jsonError);
				}
				$scope.freshCode();
				$scope.imgcode="";
				return data.jsonError;
			});
		});
	}
}
</script>