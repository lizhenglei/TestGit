<script>
PPrdDetailInfoCtrl.$inject = ["$scope","$remote","$targets","$filter","$context"];
function PPrdDetailInfoCtrl($scope,$remote,$targets,$filter,$context){
	$scope.init=function(){
		//区别粒金理财和天天利理财的标志
		$scope.flag=$context.getJson().selecType;
		//粒金理财/天天利产品代码
		$scope.prdCode=$context.getJson().selectedLiCai;
		$scope.prdInfo=$context.getJson().prdInfo;
		$scope.prdInfo.lastDate=$scope.formartDate($scope.prdInfo.PrdctEndDt,1);
		console.log($scope.prdInfo);
// 		if($scope.flag!="TTLi"){
// 			$scope.prdInfo.lastDate=$scope.formartDate($scope.prdInfo.PrdctEndDt,1);
// 			$scope.prdInfo.TplCd="";
// 		}
	}

	//查询产品说明书
	$scope.proDirect=function(proCode,proType){
		var params={
				"PrdctCd":proCode,
				"PrdType":proType//01天天利02粒金理财
		}
		$remote.post("/pmobile/FinancialProductDeclareQuery.do",params,function(data){
			$scope.prdFileName=data.FileCNName;
			document.getElementById("prdFileId").innerHTML=data.Content;
			$targets("content","#+1");
			NativeCall.setTitle("产品说明书");//设置标题
		});
	}
	//粒金、天天利风险提示书
	$scope.FXproDirect=function(params){//param值：10-粒金理财风险揭示书，12-天天利风险揭示书
		$remote.post("/pmobile/TreatyContent.do",{"TreatyType":params},function(data){
			document.getElementById("prdFileId").innerHTML=data.Content;
			$targets("content","#+1");
			NativeCall.setTitle("风险提示书");//设置标题
		});
	}
	//前往粒金理财购买页
	$scope.toLJBuy=function(obj){
		$context.setJson({"LJproduct":obj});
// 		$context.setJson({"LJday":$scope.ljProdects.investTerm});
		$scope.goto("PPrdDetailInfo","LiJinBuy");
	}
	$scope.toOldAmt=function(obj){
		$context.setJson({"jzlc":obj});
		$scope.goto("PPrdDetailInfo","jzlcdetail");
		
	}
}
</script>