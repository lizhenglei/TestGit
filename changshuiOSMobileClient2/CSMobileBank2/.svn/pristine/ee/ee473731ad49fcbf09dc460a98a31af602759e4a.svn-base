// 					item.NormalPayeeBankName="未设置开户行";
// 				}
// 				if($scope.seleBankType=="2"&&item.QuickPayeeBankName==""){
// 					item.QuickPayeeBankName="未设置收款银行";
// 				}
// 			});
// 		});
// 	};
}
</script>